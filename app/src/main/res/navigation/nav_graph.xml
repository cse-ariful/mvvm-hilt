<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postFeedFragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.mvvmwithhilt.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/main_to_host"
            app:destination="@id/host_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_postFeedFragment"
            app:destination="@id/postFeedFragment" />
        <action
            android:id="@+id/action_main_fragment_to_wifip2pfragment"
            app:destination="@id/wifip2pfragment" />
    </fragment>
    <fragment
        android:id="@+id/host_fragment"
        android:name="com.example.mvvmwithhilt.ui.Attendance.HostFragment"
        android:label="host_fragment"
        tools:layout="@layout/host_fragment" >
        <action
            android:id="@+id/action_host_fragment_to_wifiP2pFragment"
            app:destination="@id/wifip2pfragment" />
    </fragment>
    <fragment
        android:id="@+id/wifip2pfragment"
        android:name="com.example.mvvmwithhilt.ui.wifip2p.WifiP2pFragment"
        android:label="WifiP2pFragment" />
    <fragment
        android:id="@+id/postFeedFragment"
        android:name="com.example.mvvmwithhilt.ui.feed.PostFeedFragment"
        android:label="post_feed_fragment"
        tools:layout="@layout/post_feed_fragment" >
        <action
            android:id="@+id/action_postFeedFragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>
</navigation>