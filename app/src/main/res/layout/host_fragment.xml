<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <import type="com.example.mvvmwithhilt.R"/>
        <variable
            name="viewModel"
            type="com.example.mvvmwithhilt.ui.host.HostViewModel" />
    </data>
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hotSpotController"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="2dp"
                android:checkable="true"

                android:clickable="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/serverController"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:id="@+id/hotSpotTitle"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:gravity="center_horizontal"
                        android:text="@string/hotspot"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:text="@string/hotspot_disable_hint"
                        app:layout_constraintTop_toBottomOf="@id/hotSpotTitle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="6dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/serverController"
                app:cardElevation="2dp"
                android:checkable="true"
                android:clickable="true"
                android:onClick="@{()->viewModel.toggleLocalServer()}"
                app:cardBackgroundColor="@{viewModel.running?@color/green:@color/off_white}"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/hotSpotController"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <ImageButton
                        android:background="?selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/ic_outline_help_outline_24"
                        android:layout_margin="4dp"
                        android:scaleType="fitXY"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:id="@+id/serverTitle"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:gravity="center_horizontal"
                        android:text="@string/web_submission"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:text="@{viewModel.running?viewModel.hostAddress:@string/server_disable_hint}"
                        app:layout_constraintTop_toBottomOf="@id/serverTitle"
                        android:textColor="@{viewModel.running?@color/white:@color/black}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="6dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/recyclerView"
            tools:listitem="@layout/layout_attandance_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>